<%- include('partials/header') %>

<script src="https://cdn.jsdelivr.net/npm/toastify-js"></script>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.css">

<script>
  document.addEventListener("DOMContentLoaded", function () {
      let successMessage = "<%= successMessage || '' %>";
      if (successMessage.trim() !== "") {
          Toastify({
              text: successMessage,
              duration: 3000,
              gravity: "top",
              position: "right",
              backgroundColor: "green",
          }).showToast();
      }
  });
</script>


<div class="jumbotron text-center">
  <div class="container">
    <i class="fas fa-key fa-6x"></i>
    <h1 class="display-3">You've Discovered My Secret!</h1>
    
    <% usersWithSecrets.forEach(function(user) { %>
      <% user.secrets.forEach(function(secret) { %>
        <p class="secret-text"><%= secret %></p>
      <% }); %>
    <% }); %>
    

    <hr>
    
    <a class="btn btn-light btn-lg" href="/logout" role="button">Log Out</a>
    <a class="btn btn-dark btn-lg" href="/submit" role="button">Submit a Secret</a>
    <a class="btn btn-secondary btn-lg" href="/" role="button">Home</a>
  </div>
</div>

<%- include('partials/footer') %>
